                        android:id="@+id/nifty50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/indiaflag"
                        android:fontFamily="@font/hammersmithoneregular"
                        android:padding="5dp"
                        android:text="NIFTY50"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/niftyDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="0dp"
                        android:layout_below="@+id/nifty50"
                        android:fontFamily="@font/hammersmithoneregular"
                        android:padding="5dp"
                        android:text="Dec 24, 16:10"
                        android:textColor="#000"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nifty50Rate"
