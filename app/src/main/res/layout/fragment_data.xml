                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nifty"
                    android:padding="5dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:id="@+id/indiaflag"
                        android:scaleType="centerCrop"
                        android:src="@drawable/indiaflag"
                        />
