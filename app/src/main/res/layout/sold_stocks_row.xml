<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:background="#fff"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/stockLayout"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentStockPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="Profit/Loss"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/estimatedChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="(0.5%)"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:visibility="gone"
                android:layout_weight="1"
                android:id="@+id/netChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="Net(0.5%)"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/txn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="txnCO12345678GOLDB"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txn_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="1 Jan 2019"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:clickable="true"
            android:layout_marginTop="-13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/historyCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/hammersmithoneregular"
                android:maxWidth="150dp"
                android:padding="5dp"
                android:singleLine="true"
                android:text="Company"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/historyTotalReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="000000.00"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/historyQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_toLeftOf="@+id/historyTotalReturn"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="000"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/historyBuyOrSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/historyCompanyName"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="SOLD"
                android:textColor="@color/red"
                android:textSize="15sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="-5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expand"
                app:srcCompat="@drawable/expand_more"
                android:background="#fff"/>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expandableLayout"
                app:el_expanded="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Buy price"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/buyprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Sell price"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/sellprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Quantity"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/sellquantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Transaction charges"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txncharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Return amount"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/returnamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Profit/Loss amount"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/changeamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Profit/Loss %"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/percentchangeamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Net Profit/Loss amount"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/netchangeamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="-5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="Net Profit/Loss %"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/netpercentchangeamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/hammersmithoneregular"
                            android:padding="5dp"
                            android:text="350"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>