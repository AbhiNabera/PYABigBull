<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginregistrationbackground"
    tools:context=".Login.RegistrationActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/registrationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="1"
        android:layout_margin="25dp"
        android:background="#fff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bigbulllogo"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:checkedButton="@id/member"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_group">

                    <RadioButton
                        android:buttonTint="@color/colorPrimary"
                        android:textSize="13dp"
                        android:layout_weight="1"
                        android:id="@+id/member"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member"
                        android:fontFamily="@font/hammersmithone"/>

                    <RadioButton
                        android:textColor="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimary"
                        android:textSize="13dp"
                        android:layout_weight="1"
                        android:id="@+id/spouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spouse"
                        android:fontFamily="@font/hammersmithone"/>

                    <RadioButton
                        android:textColor="@color/colorPrimary"
                        android:buttonTint="@color/colorPrimary"
                        android:textSize="13dp"
                        android:layout_weight="1"
                        android:id="@+id/child"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Child"
                        android:fontFamily="@font/hammersmithone"/>

                </RadioGroup>

            </LinearLayout>

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_action_user"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hammersmithone"
                android:hint="Enter full name"
                android:textAllCaps="true"
                android:inputType="textCapCharacters"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorTabtext" />

            <EditText
                android:inputType="textCapCharacters"
                android:visibility="gone"
                android:id="@+id/dependentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/border"
                android:drawableLeft="@drawable/ic_action_user"
                android:drawablePadding="10dp"
                android:fontFamily="@font/hammersmithone"
                android:hint="Enter husband's name"
                android:singleLine="true"
                android:textAllCaps="true"
                android:padding="10dp"
                android:textColor="@color/colorTabtext" />

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="18dp"
                android:background="@drawable/button_border"
                android:fontFamily="@font/hammersmithoneregular"
                android:padding="5dp"
                android:text="NEXT"
                android:textColor="@color/greenText"
                android:textSize="18dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>