                                android:padding="5dp">


                                <TextView
                                    android:id="@+id/crudeOilText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_alignParentLeft="true"
                                    android:fontFamily="@font/hammersmithoneregular"
                                    android:layout_centerInParent="true"
                                    android:padding="5dp"
                                    android:text="CRUDEOIL"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/crudeOilCurrentValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/crudeOilBox"
                                    android:fontFamily="@font/hammersmithoneregular"
                                    android:padding="5dp"
                                    android:text="000000.00"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:orientation="vertical"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_alignParentRight="true"
                                    android:id="@+id/crudeOilBox"
                                    android:layout_centerVertical="true"
                                    android:background="@color/greenText">

                                    <TextView
                                        android:id="@+id/crudeOilBoxProfit"
                                        android:layout_width="wrap_content"
