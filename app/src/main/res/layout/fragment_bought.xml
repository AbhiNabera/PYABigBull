                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/hammersmithoneregular"
                                        android:text="00.0"
                                        android:textColor="#fff"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/currencyBoxProfitPercent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/hammersmithoneregular"
                                        android:text="0.0%"
                                        android:textColor="#fff"
                                        android:textSize="12sp" />


                                </LinearLayout>



                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/fixedDepositCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0.5dp"
                            android:layout_below="@id/currencyCard"
                            android:alpha="1"
                            android:background="#fff"
                            android:clickable="true"
                            card_view:cardCornerRadius="0dp"
                            card_view:cardBackgroundColor="#fff">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/fixedDeposit"
                                android:padding="5dp">


                                <TextView
                                    android:id="@+id/fixedDepositText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_alignParentLeft="true"
                                    android:fontFamily="@font/hammersmithoneregular"
                                    android:layout_centerInParent="true"
                                    android:padding="5dp"
                                    android:text="FIXED DEPOSIT"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/fixedDepositCurrentValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="5dp"
                                    android:layout_toLeftOf="@+id/fixedDepositBox"
                                    android:fontFamily="@font/hammersmithoneregular"
