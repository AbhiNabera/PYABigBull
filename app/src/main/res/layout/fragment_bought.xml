                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/hammersmithoneregular"
                                        android:text="00.0"
                                        android:textColor="#fff"
                                        android:textSize="12sp" />

                                    <TextView
