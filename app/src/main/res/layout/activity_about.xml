                        app:civ_border_color="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/nifty50111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/indiaflag111"
                        android:fontFamily="@font/hammersmithoneregular"
                        android:padding="5dp"
                        android:text="Avinash Kumar Ranjan"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/niftyDate111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/indiaflag111"
                        android:layout_below="@+id/nifty50111"
                        android:fontFamily="@font/hammersmithoneregular"
                        android:padding="5dp"
                        android:text="Contact - +91 9717215623"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/niftyCard1111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:background="#fff"
                android:clickable="true"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nifty1111"
                    android:padding="5dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/indiaflag1111"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/abhinabera"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorPrimaryDark"/>

                    <TextView
                        android:id="@+id/nifty501111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@+id/indiaflag1111"
                        android:fontFamily="@font/hammersmithoneregular"
                        android:padding="5dp"
                        android:text="Abhinandan Nabera"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/niftyDate1111"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/indiaflag1111"
                        android:layout_below="@+id/nifty501111"
                        android:fontFamily="@font/hammersmithoneregular"
                        android:padding="5dp"
                        android:text="Contact - +91 8939033399"
